<div class="row">
  <h4 class="col-1">
    <%= link_to new_event_diary_path(@event.id) do %>
      <i class="fas fa-arrow-circle-left"></i>
    <% end %>
  </h4>
  <div class="col-9 title">
    <h3>
      <%= @event.plan_datetime.to_date %>
    </h3>
  </div>
</div>

<!--日記の編集-->
<div class="row">
  <div class="col-lg-6">
    <%= image_tag "book4.png", class:"diaryimage" %>
    <div class="new-diary">
      <%= form_with model: [@event, @diary] do |f| %>
        <%= f.text_field :simple_diary, class: "diary-width" %><br>
        <%= f.text_area :detail, class: "diary-width diary-detail" %><br>
        <button type="submit", class="diary-btn float-right btn btn-primary", align="right">
          更新 <i class="fas fa-hand-point-up"></i>
        </button>
      <% end %>
    </div>
  </div>
  <div class="col-lg-6 piyoimage">
    <%= image_tag "diary-piyo.png", class:"piyoimage-size" %>
  </div>
</div>